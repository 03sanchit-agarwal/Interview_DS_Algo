#include<iostream>
#include<climits>
using namespace std;
int t[11][51];
int solve(int e, int f) {
    if(t[e][f] != -1)
        return t[e][f];
    if(e == 1 || f == 0 || f == 1)
        return t[e][f] = f;
    
    int minAttempts = INT_MAX;
    for(int k = 1; k<=f; k++) {
        int no_break;
        if(t[e][f-k] != -1)
            no_break = t[e][f-k];
        else
            no_break = solve(e, f-k);
	    
        int breaks;
        if(t[e-1][k-1] != -1)
            breaks = t[e-1][k-1];
        else
            breaks = solve(e-1, k-1);
        int temp = 1 + max(no_break, breaks); //Wehn things are not in your control, expect the worst
        
        minAttempts = min(minAttempts, temp); //When things are in your control, choose your best
    }
    return t[e][f] = minAttempts;
}

int main()
 {
	int T;
	int N, K;
	cin >> T;
	while(T--) {
	    cin >> N >> K;
	    memset(t, -1, sizeof(t));
	    cout << solve(N, K) << endl;
	}
	return 0;
}
